generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  planned
  in_progress
  completed
  on_hold
  cancelled
}

model Project {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String         @unique
  summary     String?
  description String?
  status      ProjectStatus  @default(in_progress)
  startDate   DateTime?
  endDate     DateTime?
  clientName  String?
  clientSector String?
  tags        String[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}